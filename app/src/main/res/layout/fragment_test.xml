<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Test.TestFragment"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/test_fragment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_fragment_01"
        android:textAlignment="center"
        android:textColor="#FF1200"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/test_fragment_btn_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试1"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="25sp" />
    <Button
        android:id="@+id/test_fragment_btn_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试2"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="25sp" />


</LinearLayout>